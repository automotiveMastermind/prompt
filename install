rm -rRf backup
mkdir -p backup/ssh

if ! test -f ~/.ssh; then
    mkdir -p ~/.ssh
fi

if test -f ~/.bashprofile; then
    cp ~/.bash_profile backup/bash_profile

    if grep -q "~/.ssh/bashrc" ~/.bash_profile; then
        cat template > ~/.bash_profile
    fi
else
    cat template > ~/.bash_profile
fi

cp -R ~/.ssh/* backup/ssh

cp -Rf src/* ~/.ssh
